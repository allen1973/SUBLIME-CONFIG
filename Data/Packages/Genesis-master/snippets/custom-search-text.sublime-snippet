<snippet>
	<content><![CDATA[
add_filter( 'genesis_search_text', '${1:prefix}_search_text' );
/**
 * Customizes the text of the search input
 *
 * @param  string \$text current text
 * @return string modified text
 */
function ${1:prefix}_search_text( \$text ) {
	return esc_attr( '${1:Search}' );
}
$2
]]></content>
	<tabTrigger>WPST</tabTrigger>
	
	<description>Customize Search Text</description>
